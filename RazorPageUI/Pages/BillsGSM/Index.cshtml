@page
@model RazorPageUI.Pages.BillsGSM.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BillGSM[0].ProductofferID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillGSM[0].ProductofferNameGSM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillGSM[0].UnitPriceGSM)
            </th>
            <th>
                Količina jedinične mjere
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillGSM[0].ValueWithoutVAT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillGSM[0].ReleaseDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.BillGSM) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductofferID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductofferNameGSM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPriceGSM)
            </td>
            @if (!item.UnitPriceAmountGSM1.Equals(null))
            {
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPriceAmountGSM1)
                </td>
            }
            else
            {
            <td>
                @Html.DisplayFor(modelItem => item.UnitPriceAmountGSM2)
            </td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.ValueWithoutVAT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
